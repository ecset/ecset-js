{
    "id":"elsinore/component",

    "nickname": {
        "id":"/component/nickname",
        "description":"an entity identifiable by a name",
        "properties":{
            "nick":{ 
                "type":"string",
                "pattern":"^[a-z_\\-\\[\\]\\\\^{}|`][a-z0-9_\\-\\[\\]\\\\^{}|`]{2,15}"
            }
        }
    },

    "position": {
        "id": "/component/position",
        "properties":{
            "x": { "type": "number", "default": 0 },
            "y": { "type": "number", "default": 0 },
            "z": { "type": "number", "default": 0 },
            "w": { "type": "number", "default": 0 }
        }
    },


    "score": {
        "id": "/component/score",
        "properties": {
            "score": { "type":"integer" },
            "lives": { "type":"integer", "default": 3 }
        }
    },

    "realname": {
        "id": "/component/realname",
        "properties":{
            "name":{  "type":"string", "minLength":3, "maxLength":50 }
        }
    },

    "command": {
        "id": "/component/command",
        "properties":{
            "id":{ "type":"string" },
            "keyword": { "type":"string" },
            "parameters":{  "type":"array" },
            "command":{ "type":"object", "description":"command object" },
            "status":{ "type":"string", "enum":[ "unprocessed", "processed" ] }
        }
    },

    "channel": {
        "id": "/component/channel",
        "properties":{
        }
    },

    "channel_member": {
        "id": "/component/channel_member",
        "properties":{
            "channel":{ "type":"integer", "format":"entity" }
        }
    },

    "channel": {
        "id": "/component/channel",
        "properties":{
            "topic":{ "type":"string" }
        }
    },

    "tag": {
        "id": "/component/tag",
        "properties":{
            "code":{ "type":"string" },
            "name":{ "type":"string" },
            "type":{ "type":"integer" }
        }
    },

    "geo_location": {
        "id": "/component/geo_location",
        "description": "A geographical coordinate",
        "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "altitude":{ "type":"number" },
            "accuracy": { "type":"number" }
        }
    },

    "radius": {
        "id": "/component/radius",
        "properties":{
            "radius":{ "type":"number" }
        }
    },

    "flower": {
        "id": "/component/flower",
        "properties":{
            "name":{ "type":"string" },
            "colour":{ "type":"string" }
        }
    },
    "animal": {
        "id": "/component/animal",
        "properties":{
            "name":{ "type":"string" }
        }
    },
    "mineral": {
        "id": "/component/mineral",
        "properties":{
            "name":{ "type":"string" }
        }
    },
    "vegetable": {
        "id": "/component/vegetable",
        "properties":{
            "name":{ "type":"string" }
        }
    }
}